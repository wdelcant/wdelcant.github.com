    ERROR_MESSAGE:
      'Lo siento, no pude procesar tu mensaje en este momento. ¬øPodr√≠as contactarme directamente a wilsondelcanto.redes@gmail.com?',
  };

  // Mapeo de secciones del portafolio para navegaci√≥n autom√°tica
  const SECTIONS_MAP = {
    // Secci√≥n Inicio/Home
    home: {
      id: 'home',
