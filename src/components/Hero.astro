---
// Hero section component
import { getExperienceStats } from '../data/experience';

// Get dynamic experience statistics
const stats = getExperienceStats();
---

<section
  id="home"
  class="min-h-screen flex items-center justify-center relative overflow-hidden pt-20 md:pt-0"
>
  <!-- Background gradient -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-gray-900 via-purple-900/20 to-cyan-900/20"
  >
  </div>

  <!-- Floating background elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div
      class="absolute top-1/4 left-1/4 w-72 h-72 bg-purple-500/10 rounded-full blur-3xl animate-float"
    >
    </div>
    <div
      class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl animate-float"
      style="animation-delay: 1s;"
    >
    </div>
    <div
      class="absolute top-3/4 left-1/2 w-64 h-64 bg-pink-500/10 rounded-full blur-3xl animate-float"
      style="animation-delay: 2s;"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 relative z-10">
    <div class="text-center">
      <!-- Main Title -->
      <h1 class="text-4xl sm:text-6xl md:text-8xl font-bold mb-6 sm:mb-8">
        <span
          class="bg-gradient-to-r from-purple-400 via-pink-400 to-cyan-400 bg-clip-text text-transparent animate-gradient-x"
        >
          WILSON
        </span>
        <br />
        <span class="text-white"> DEL CANTO </span>
      </h1>

      <!-- Typing Animation -->
      <div class="mb-12">
        <p class="text-xl sm:text-2xl md:text-3xl text-gray-300 h-10">
          <span id="typed-text"></span>
          <span class="animate-pulse">|</span>
        </p>
      </div>

      <!-- Description -->
      <p
        class="text-base sm:text-lg md:text-xl text-gray-400 max-w-4xl mx-auto mb-12 leading-relaxed px-4"
      >
        Analista especialista en IT con más de {stats.totalYearsDisplay} años de
        experiencia. Con vasta experiencia en desarrollo full stack, automatización
        y soluciones cloud. Apasionado por crear tecnología que impulse la continuidad
        del negocio y la innovación.
      </p>

      <!-- CTA Buttons -->
      <div
        class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center px-4"
      >
        <a
          href="#projects"
          class="w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-4 bg-gradient-to-r from-purple-500 to-cyan-500 hover:from-purple-600 hover:to-cyan-600 text-white font-semibold rounded-full transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl text-center"
        >
          Ver Proyectos
        </a>
        <a
          href="#contact"
          class="w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-4 border-2 border-purple-400 text-purple-400 hover:bg-purple-400 hover:text-white font-semibold rounded-full transition-all duration-300 transform hover:scale-105 text-center"
        >
          Contacto
        </a>
        <a
          href="/cv_wdelcanto.pdf"
          target="_blank"
          class="w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-4 border-2 border-cyan-400 text-cyan-400 hover:bg-cyan-400 hover:text-white font-semibold rounded-full transition-all duration-300 transform hover:scale-105 text-center"
        >
          Descargar CV
        </a>
      </div>

      <!-- Scroll Indicator -->
      <div class="mt-12 sm:mt-20 flex justify-center">
        <a
          href="#about"
          class="text-gray-400 hover:text-white transition-colors duration-300 animate-bounce"
          aria-label="Desplazarse hacia abajo"
        >
          <svg
            class="w-8 h-8"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  // Typing animation
  const texts = [
    'IT Analyst',
    'Full Stack Developer',
    'IT Support Specialist',
    'Automation Expert',
    'Cloud Solutions',
  ];

  let textIndex = 0;
  let charIndex = 0;
  let isDeleting = false;
  const typedTextElement = document.getElementById('typed-text');

  function typeWriter() {
    const currentText = texts[textIndex];

    if (isDeleting) {
      typedTextElement!.textContent = currentText.substring(0, charIndex - 1);
      charIndex--;
    } else {
      typedTextElement!.textContent = currentText.substring(0, charIndex + 1);
      charIndex++;
    }

    let typeSpeed = 100;

    if (isDeleting) {
      typeSpeed /= 2;
    }

    if (!isDeleting && charIndex === currentText.length) {
      typeSpeed = 2000;
      isDeleting = true;
    } else if (isDeleting && charIndex === 0) {
      isDeleting = false;
      textIndex = (textIndex + 1) % texts.length;
      typeSpeed = 500;
    }

    setTimeout(typeWriter, typeSpeed);
  }

  // Start typing animation when page loads
  document.addEventListener('DOMContentLoaded', typeWriter);
</script>
